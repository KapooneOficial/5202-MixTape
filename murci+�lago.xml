  viewBox="0 0 24 24"
  width="24"
  height="24"
  fill="black">
  <path d="M12 2c-1.1 0-2.1.5-3 1.4l-1 1c-.5-.1-1-.4-1.5-.8l-.5-.8C4.3 2.3 3 3.6 3 5.5c0 .7.2 1.3.5 1.9L0 11c1.2.7 3 .8 4 .9v2c-2 .6-4 .8-4 .8s0 .8.7 1c0 .6.8.9 2 .9h16c1.2 0 2-.3 2-1s-.8-1-1-1h-11c-.7-.7-4 .6-6 .9v-2c2-.6 4-2 4-2l9-7c-.5-.6-.7-1.3-1.2-1.9l-.5.8c-.5.4-1 .7-1.5.8l-1-1C14.1 2.5 13.1 2 12 2z"/>
